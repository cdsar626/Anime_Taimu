---
/**
 * AnimeDisplay Component
 * Displays anime cover image and title with loading states and animations
 * Requirements: 2.1, 2.2, 5.2, 5.5
 */

export interface Props {
  anime?: {
    id: number;
    title: {
      romaji: string;
      english?: string;
      native: string;
    };
    coverImage: {
      large: string;
      medium: string;
    };
    episodes: number | null;
    duration: number | null;
    status: string;
    description?: string;
  } | null;
  isLoading?: boolean;
  error?: string | null;
}

const { anime, isLoading = false, error = null } = Astro.props;
---

<div class="anime-display">
  {isLoading && (
    <div class="anime-display__loading">
      <div class="anime-display__cover-skeleton loading-skeleton"></div>
      <div class="anime-display__title-skeleton">
        <div class="loading-skeleton anime-display__title-line"></div>
        <div class="loading-skeleton anime-display__subtitle-line"></div>
      </div>
    </div>
  )}

  {error && !isLoading && (
    <div class="anime-display__error">
      <div class="anime-display__error-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
        </svg>
      </div>
      <p class="anime-display__error-message">{error}</p>
    </div>
  )}

  {!anime && !isLoading && !error && (
    <div class="anime-display__content">
      <div class="anime-display__hero">
        <div class="anime-display__cover-container">
          <div class="anime-display__cover anime-display__cover-placeholder">
            <svg width="160" height="225" viewBox="0 0 160 225" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="160" height="225" fill="rgba(0, 206, 209, 0.1)" rx="12"/>
              <circle cx="80" cy="90" r="20" fill="rgba(0, 206, 209, 0.3)"/>
              <rect x="50" y="130" width="60" height="8" fill="rgba(0, 206, 209, 0.2)" rx="4"/>
              <rect x="60" y="150" width="40" height="6" fill="rgba(0, 206, 209, 0.15)" rx="3"/>
            </svg>
          </div>
        </div>
        
        <div class="anime-display__title-section">
          <h1 class="anime-display__main-title">Search for an anime</h1>
          <p class="anime-display__subtitle">Use the search box above to find your favorite series</p>
        </div>
      </div>
      
      <div class="anime-display__stats">
        <div class="anime-display__stat-card anime-display__stat-card--placeholder">
          <div class="anime-display__stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <div class="anime-display__stat-content">
            <span class="anime-display__stat-label">Episodes</span>
            <span class="anime-display__stat-value">?</span>
          </div>
        </div>
        
        <div class="anime-display__stat-card anime-display__stat-card--placeholder">
          <div class="anime-display__stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12,6 12,12 16,14"></polyline>
            </svg>
          </div>
          <div class="anime-display__stat-content">
            <span class="anime-display__stat-label">Duration</span>
            <span class="anime-display__stat-value">? min/ep</span>
          </div>
        </div>
      </div>
    </div>
  )}

  {anime && !isLoading && !error && (
    <div class="anime-display__content animate-fade-in">
      <!-- Hero Section with Large Cover and Title -->
      <div class="anime-display__hero">
        <div class="anime-display__cover-container">
          <img
            class="anime-display__cover"
            src={anime.coverImage.large || anime.coverImage.medium}
            alt={`Cover image for ${anime.title.english || anime.title.romaji}`}
            loading="lazy"
            decoding="async"
            onload="this.classList.add('loaded')"
            onerror="this.classList.add('error'); this.src='data:image/svg+xml;base64,'"
          />
          <div class="anime-display__cover-overlay"></div>
          <div class="anime-display__cover-glow"></div>
        </div>
        
        <div class="anime-display__title-section">
          <h1 class="anime-display__main-title">
            {anime.title.english || anime.title.romaji}
          </h1>
          
          {anime.title.english && anime.title.romaji !== anime.title.english && (
            <p class="anime-display__subtitle">
              {anime.title.romaji}
            </p>
          )}
          
          {anime.status && (
            <div class="anime-display__status-badge" data-status={anime.status.toLowerCase()}>
              {anime.status.replace('_', ' ').toLowerCase().replace(/\b\w/g, l => l.toUpperCase())}
            </div>
          )}
        </div>
      </div>
      
      <!-- Episode Information Cards -->
      <div class="anime-display__stats">
        <div class="anime-display__stat-card">
          <div class="anime-display__stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <div class="anime-display__stat-content">
            <span class="anime-display__stat-label">Episodes</span>
            <span class="anime-display__stat-value">
              {anime.episodes || 'Unknown'}
            </span>
          </div>
        </div>
        
        <div class="anime-display__stat-card">
          <div class="anime-display__stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12,6 12,12 16,14"></polyline>
            </svg>
          </div>
          <div class="anime-display__stat-content">
            <span class="anime-display__stat-label">Duration</span>
            <span class="anime-display__stat-value">
              {anime.duration || 24} min/ep
              {!anime.duration && (
                <span class="anime-display__stat-note">(default)</span>
              )}
            </span>
          </div>
        </div>
      </div>
    </div>
  )}
</div>

<style>
  .anime-display {
    width: 100%;
    margin: 0 auto;
  }

  /* Loading States */
  .anime-display__loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2xl);
    padding: var(--space-3xl);
  }

  .anime-display__cover-skeleton {
    width: 320px;
    height: 450px;
    border-radius: var(--radius-xl);
  }

  .anime-display__title-skeleton {
    width: 100%;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    align-items: center;
  }

  .anime-display__title-line {
    height: 4rem;
    width: 100%;
    border-radius: var(--radius-lg);
  }

  .anime-display__subtitle-line {
    height: 2rem;
    width: 75%;
    border-radius: var(--radius-md);
  }

  /* Error States */
  .anime-display__error {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-xl);
    text-align: center;
  }

  .anime-display__error-icon {
    color: var(--text-secondary);
    opacity: 0.6;
  }

  .anime-display__error-message {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
    margin: 0;
  }

  /* Content Display */
  .anime-display__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3xl);
    text-align: center;
    padding: var(--space-3xl);
    min-height: 70vh;
    justify-content: center;
  }

  /* Hero Section - Main Focus */
  .anime-display__hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3xl);
    margin-bottom: var(--space-2xl);
    position: relative;
  }

  .anime-display__cover-container {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: 
      0 32px 64px rgba(0, 206, 209, 0.25),
      0 16px 32px rgba(0, 0, 0, 0.15),
      0 0 0 4px rgba(0, 206, 209, 0.1);
    transition: all var(--transition-normal);
    background: linear-gradient(135deg, var(--primary-aqua-light), var(--primary-aqua));
  }

  .anime-display__cover-container:hover {
    transform: translateY(-12px) scale(1.05);
    box-shadow: 
      0 40px 80px rgba(0, 206, 209, 0.35),
      0 20px 40px rgba(0, 0, 0, 0.2),
      0 0 0 6px rgba(0, 206, 209, 0.2);
  }

  .anime-display__cover-container:active {
    transform: translateY(-2px) scale(1.01);
  }

  .anime-display__cover {
    width: 320px;
    height: 450px;
    object-fit: cover;
    display: block;
    transition: all var(--transition-normal);
    position: relative;
    z-index: 1;
  }

  .anime-display__cover.loaded {
    opacity: 1;
    animation: fadeIn var(--transition-slow) ease-out;
  }

  .anime-display__cover.error {
    opacity: 1;
    background: var(--background);
  }

  .anime-display__cover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.15), transparent);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 2;
  }

  .anime-display__cover-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle, rgba(0, 206, 209, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 0;
    border-radius: var(--radius-2xl);
  }

  .anime-display__cover-container:hover .anime-display__cover-overlay {
    opacity: 1;
  }

  .anime-display__cover-container:hover .anime-display__cover-glow {
    opacity: 1;
  }

  /* Title Section */
  .anime-display__title-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    max-width: 800px;
  }

  .anime-display__main-title {
    font-size: var(--font-size-6xl);
    font-weight: 900;
    color: var(--text-primary);
    margin: 0;
    line-height: 1;
    text-shadow: 0 4px 8px rgba(0, 206, 209, 0.3);
    text-align: center;
    letter-spacing: -0.02em;
  }

  .anime-display__subtitle {
    font-size: var(--font-size-2xl);
    color: var(--text-secondary);
    margin: 0;
    font-style: italic;
    font-weight: 600;
    opacity: 0.9;
    text-align: center;
  }

  .anime-display__status-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-sm) var(--space-lg);
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.15), rgba(72, 209, 204, 0.1));
    border: 2px solid var(--primary-aqua-light);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(0, 206, 209, 0.2);
  }

  /* Stats Section */
  .anime-display__stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    width: 100%;
    max-width: 600px;
  }

  .anime-display__stat-card {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-2xl);
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.12), rgba(72, 209, 204, 0.06));
    border: none;
    border-radius: var(--radius-xl);
    box-shadow: 
      0 16px 32px rgba(0, 206, 209, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .anime-display__stat-card:hover {
    transform: translateY(-6px);
    box-shadow: 
      0 20px 40px rgba(0, 206, 209, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .anime-display__stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--primary-aqua), var(--primary-aqua-dark));
    border-radius: var(--radius-lg);
    color: white;
    box-shadow: 0 4px 12px rgba(0, 206, 209, 0.3);
    flex-shrink: 0;
  }

  .anime-display__stat-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    flex: 1;
  }

  .anime-display__stat-label {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.9;
  }

  .anime-display__stat-value {
    font-size: var(--font-size-xl);
    font-weight: 800;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .anime-display__stat-note {
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    font-weight: 500;
    opacity: 0.8;
  }

  /* Placeholder States */
  .anime-display__cover-placeholder {
    width: 320px;
    height: 450px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.05), rgba(72, 209, 204, 0.02));
    border: 2px dashed rgba(0, 206, 209, 0.2);
  }

  .anime-display__stat-card--placeholder {
    opacity: 0.6;
  }

  .anime-display__stat-card--placeholder .anime-display__stat-icon {
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.3), rgba(0, 206, 209, 0.2));
  }



  /* Responsive Design */
  @media (max-width: 767px) {
    .anime-display__content {
      padding: var(--space-2xl);
      gap: var(--space-2xl);
      min-height: 60vh;
    }

    .anime-display__hero {
      gap: var(--space-2xl);
    }

    .anime-display__cover {
      width: 240px;
      height: 336px;
    }

    .anime-display__cover-skeleton {
      width: 240px;
      height: 336px;
    }

    .anime-display__main-title {
      font-size: var(--font-size-4xl);
    }

    .anime-display__subtitle {
      font-size: var(--font-size-xl);
    }

    .anime-display__stats {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .anime-display__stat-card {
      padding: var(--space-lg);
    }

    .anime-display__stat-icon {
      width: 40px;
      height: 40px;
    }

    .anime-display__stat-value {
      font-size: var(--font-size-lg);
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .anime-display__cover {
      width: 280px;
      height: 392px;
    }

    .anime-display__main-title {
      font-size: var(--font-size-5xl);
    }
  }

  /* Accessibility Improvements */
  @media (prefers-reduced-motion: reduce) {
    .anime-display__cover,
    .anime-display__cover-container,
    .anime-display__cover-overlay {
      transition: none;
    }

    .animate-fade-in {
      animation: none;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .anime-display__title {
      -webkit-text-fill-color: var(--text-primary);
      background: none;
    }

    .anime-display__episodes,
    .anime-display__duration,
    .anime-display__status {
      border-width: 3px;
    }
  }

  /* Print Styles */
  @media print {
    .anime-display__cover-overlay,
    .anime-display__cover-container:hover {
      display: none;
    }

    .anime-display__cover {
      opacity: 1 !important;
    }
  }
</style>

<script>
  // Enhanced lazy loading with intersection observer for better performance
  if ('IntersectionObserver' in window) {
    const imageObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          if (img.dataset.src) {
            img.src = img.dataset.src;
            img.removeAttribute('data-src');
            observer.unobserve(img);
          }
        }
      });
    });

    // Observe all anime cover images
    document.querySelectorAll('.anime-display__cover[data-src]').forEach(img => {
      imageObserver.observe(img);
    });
  }

  // Preload next likely images for better UX
  function preloadImage(src: string) {
    if (src && src !== 'data:image/svg+xml;base64,') {
      const link = document.createElement('link');
      link.rel = 'preload';
      link.as = 'image';
      link.href = src;
      document.head.appendChild(link);
    }
  }

  // Export preload function for use by parent components
  (window as any).preloadAnimeImage = preloadImage;

  // Function to update component from parent
  function updateAnimeDisplay(anime: any, isLoading: boolean, error: string | null) {
    const animeDisplayElement = document.querySelector('.anime-display');
    if (!animeDisplayElement) return;

    // Update the component's data attributes
    if (anime) {
      animeDisplayElement.setAttribute('data-anime', JSON.stringify(anime));
    } else {
      animeDisplayElement.removeAttribute('data-anime');
    }
    animeDisplayElement.setAttribute('data-loading', isLoading.toString());
    animeDisplayElement.setAttribute('data-error', error || '');

    // Re-render the component content
    renderAnimeDisplay(animeDisplayElement, anime, isLoading, error);
  }

  function renderAnimeDisplay(container: Element, anime: any, isLoading: boolean, error: string | null) {
    console.log('renderAnimeDisplay called with:', { anime, isLoading, error });
    let content = '';

    if (isLoading) {
      content = `
        <div class="anime-display__loading">
          <div class="anime-display__cover-skeleton loading-skeleton"></div>
          <div class="anime-display__title-skeleton">
            <div class="loading-skeleton anime-display__title-line"></div>
            <div class="loading-skeleton anime-display__subtitle-line"></div>
          </div>
        </div>
      `;
    } else if (error && !isLoading) {
      content = `
        <div class="anime-display__error">
          <div class="anime-display__error-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
            </svg>
          </div>
          <p class="anime-display__error-message">${error}</p>
        </div>
      `;
    } else if (anime && !isLoading && !error) {
      const englishTitle = anime.title.english || anime.title.romaji;
      const showSubtitle = anime.title.english && anime.title.romaji !== anime.title.english;
      
      content = `
        <div class="anime-display__content animate-fade-in">
          <!-- Hero Section with Large Cover and Title -->
          <div class="anime-display__hero">
            <div class="anime-display__cover-container">
              <img
                class="anime-display__cover"
                src="${anime.coverImage.large || anime.coverImage.medium}"
                alt="Cover image for ${englishTitle}"
                loading="lazy"
                decoding="async"
                onload="this.classList.add('loaded')"
                onerror="this.classList.add('error'); this.src='data:image/svg+xml;base64,'"
              />
              <div class="anime-display__cover-overlay"></div>
              <div class="anime-display__cover-glow"></div>
            </div>
            
            <div class="anime-display__title-section">
              <h1 class="anime-display__main-title">
                ${englishTitle}
              </h1>
              
              ${showSubtitle ? `
                <p class="anime-display__subtitle">
                  ${anime.title.romaji}
                </p>
              ` : ''}
              
              ${anime.status ? `
                <div class="anime-display__status-badge" data-status="${anime.status.toLowerCase()}">
                  ${anime.status.replace('_', ' ').toLowerCase().replace(/\b\w/g, (l: string) => l.toUpperCase())}
                </div>
              ` : ''}
            </div>
          </div>
          
          <!-- Episode Information Cards -->
          <div class="anime-display__stats">
            <div class="anime-display__stat-card">
              <div class="anime-display__stat-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                  <line x1="8" y1="21" x2="16" y2="21"></line>
                  <line x1="12" y1="17" x2="12" y2="21"></line>
                </svg>
              </div>
              <div class="anime-display__stat-content">
                <span class="anime-display__stat-label">Episodes</span>
                <span class="anime-display__stat-value">
                  ${anime.episodes || 'Unknown'}
                </span>
              </div>
            </div>
            
            <div class="anime-display__stat-card">
              <div class="anime-display__stat-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12,6 12,12 16,14"></polyline>
                </svg>
              </div>
              <div class="anime-display__stat-content">
                <span class="anime-display__stat-label">Duration</span>
                <span class="anime-display__stat-value">
                  ${anime.duration || 24} min/ep
                  ${!anime.duration ? '<span class="anime-display__stat-note">(default)</span>' : ''}
                </span>
              </div>
            </div>
          </div>
        </div>
      `;
    }

    container.innerHTML = content;
  }

  // Export update function for use by parent components
  (window as any).updateAnimeDisplay = updateAnimeDisplay;
</script>