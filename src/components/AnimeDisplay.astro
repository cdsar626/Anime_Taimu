---
/**
 * AnimeDisplay Component
 * Displays anime cover image and title with loading states and animations
 * Requirements: 2.1, 2.2, 5.2, 5.5
 */

export interface Props {
  anime?: {
    id: number;
    title: {
      romaji: string;
      english?: string;
      native: string;
    };
    coverImage: {
      large: string;
      medium: string;
    };
    episodes: number | null;
    duration: number | null;
    status: string;
    description?: string;
  } | null;
  isLoading?: boolean;
  error?: string | null;
}

const { anime, isLoading = false, error = null } = Astro.props;
---

<div class="anime-display">




  <!-- Main Content -->
  <div class="anime-display__content" style="display: {!isLoading && !error ? 'flex' : 'none'};">
    <!-- Hero Section with Large Cover and Title -->
    <div class="anime-display__hero">
      <div class="anime-display__cover-container">
        <!-- Cover Image -->
        <img
          class="anime-display__cover"
          src={anime?.coverImage?.large || anime?.coverImage?.medium || 'data:image/svg+xml;base64,'}
          alt={anime ? `Cover image for ${anime.title.english || anime.title.romaji}` : 'Anime cover placeholder'}
          loading="lazy"
          decoding="async"
          onload="this.classList.add('loaded')"
          onerror="this.classList.add('error'); this.src='data:image/svg+xml;base64,'"
          style={anime ? 'display: block;' : 'display: none;'}
        />
        
        <!-- Placeholder Cover for Default State -->
        <div class="anime-display__cover-placeholder" style={anime ? 'display: none;' : 'display: flex;'}>
          <svg width="80" height="112" viewBox="0 0 80 112" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="80" height="112" fill="rgba(0, 206, 209, 0.1)" rx="8"/>
            <circle cx="40" cy="45" r="12" fill="rgba(0, 206, 209, 0.3)"/>
            <rect x="25" y="65" width="30" height="4" fill="rgba(0, 206, 209, 0.2)" rx="2"/>
            <rect x="30" y="75" width="20" height="3" fill="rgba(0, 206, 209, 0.15)" rx="1.5"/>
          </svg>
        </div>
        
        <div class="anime-display__cover-overlay"></div>
        <div class="anime-display__cover-glow"></div>
      </div>
      
      <div class="anime-display__title-section">
        <h1 class="anime-display__main-title">
          {anime ? (anime.title.english || anime.title.romaji) : 'Welcome to Anime Time Calculator'}
        </h1>
        
        <p class="anime-display__subtitle" style={anime?.title?.english && anime?.title?.romaji !== anime?.title?.english ? 'display: block;' : anime ? 'display: none;' : 'display: block;'}>
          {anime ? anime.title.romaji : 'Use the search box below to find your favorite series'}
        </p>
        
        <div class="anime-display__status-badge" data-status={anime?.status?.toLowerCase() || ''} style={anime?.status ? 'display: inline-flex;' : 'display: none;'}>
          {anime?.status ? anime.status.replace('_', ' ').toLowerCase().replace(/\b\w/g, l => l.toUpperCase()) : ''}
        </div>
      </div>
    </div>
    
    <!-- Episode Information Cards -->
    <div class="anime-display__stats">
      <div class="anime-display__stat-card" class:list={[{ 'anime-display__stat-card--placeholder': !anime }]}>
        <div class="anime-display__stat-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </div>
        <div class="anime-display__stat-content">
          <span class="anime-display__stat-label">Episodes</span>
          <span class="anime-display__stat-value">
            {anime ? (anime.episodes || 'Unknown') : '?'}
          </span>
        </div>
      </div>
      
      <div class="anime-display__stat-card" class:list={[{ 'anime-display__stat-card--placeholder': !anime }]}>
        <div class="anime-display__stat-icon">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12,6 12,12 16,14"></polyline>
          </svg>
        </div>
        <div class="anime-display__stat-content">
          <span class="anime-display__stat-label">Duration</span>
          <span class="anime-display__stat-value">
            {anime ? (
              <>
                {anime.duration || 24} min/ep
                {!anime.duration && (
                  <span class="anime-display__stat-note">(default)</span>
                )}
              </>
            ) : '? min/ep'}
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .anime-display {
    width: 100%;
    margin: 0 auto;
  }

  /* Loading States */
  .anime-display__loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
  }

  .anime-display__cover-skeleton {
    width: 80px;
    height: 112px;
    border-radius: var(--radius-lg);
  }

  .anime-display__title-skeleton {
    width: 100%;
    max-width: 300px;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: center;
  }

  .anime-display__title-line {
    height: 1.5rem;
    width: 100%;
    border-radius: var(--radius-md);
  }

  .anime-display__subtitle-line {
    height: 1rem;
    width: 75%;
    border-radius: var(--radius-sm);
  }

  /* Error States */
  .anime-display__error {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    text-align: center;
  }

  .anime-display__error-icon {
    color: var(--text-secondary);
    opacity: 0.6;
  }

  .anime-display__error-message {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  /* Content Display */
  .anime-display__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    text-align: center;
    padding: var(--space-md);
    justify-content: center;
  }

  /* Hero Section - Main Focus */
  .anime-display__hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    position: relative;
  }

  .anime-display__cover-container {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: 
      0 32px 64px rgba(0, 206, 209, 0.25),
      0 16px 32px rgba(0, 0, 0, 0.15),
      0 0 0 4px rgba(0, 206, 209, 0.1);
    transition: all var(--transition-normal);
    background: linear-gradient(135deg, var(--primary-aqua-light), var(--primary-aqua));
  }

  .anime-display__cover-container:hover {
    transform: translateY(-12px) scale(1.05);
    box-shadow: 
      0 40px 80px rgba(0, 206, 209, 0.35),
      0 20px 40px rgba(0, 0, 0, 0.2),
      0 0 0 6px rgba(0, 206, 209, 0.2);
  }

  .anime-display__cover-container:active {
    transform: translateY(-2px) scale(1.01);
  }

  .anime-display__cover {
    width: 80px;
    height: 112px;
    object-fit: cover;
    display: block;
    transition: all var(--transition-normal);
    position: relative;
    z-index: 1;
  }

  .anime-display__cover.loaded {
    opacity: 1;
    animation: fadeIn var(--transition-slow) ease-out;
  }

  .anime-display__cover.error {
    opacity: 1;
    background: var(--background);
  }

  .anime-display__cover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.15), transparent);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 2;
  }

  .anime-display__cover-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle, rgba(0, 206, 209, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 0;
    border-radius: var(--radius-2xl);
  }

  .anime-display__cover-container:hover .anime-display__cover-overlay {
    opacity: 1;
  }

  .anime-display__cover-container:hover .anime-display__cover-glow {
    opacity: 1;
  }

  /* Title Section */
  .anime-display__title-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    max-width: 600px;
  }

  .anime-display__main-title {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 206, 209, 0.3);
    text-align: center;
    letter-spacing: -0.02em;
  }

  .anime-display__subtitle {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin: 0;
    font-style: italic;
    font-weight: 500;
    opacity: 0.9;
    text-align: center;
  }

  .anime-display__status-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-sm) var(--space-lg);
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.15), rgba(72, 209, 204, 0.1));
    border: 2px solid var(--primary-aqua-light);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(0, 206, 209, 0.2);
  }

  /* Stats Section */
  .anime-display__stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-sm);
    width: 100%;
    max-width: 400px;
  }

  .anime-display__stat-card {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm);
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.12), rgba(72, 209, 204, 0.06));
    border: none;
    border-radius: var(--radius-md);
    box-shadow: 
      0 4px 8px rgba(0, 206, 209, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .anime-display__stat-card:hover {
    transform: translateY(-6px);
    box-shadow: 
      0 20px 40px rgba(0, 206, 209, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .anime-display__stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: linear-gradient(135deg, var(--primary-aqua), var(--primary-aqua-dark));
    border-radius: var(--radius-sm);
    color: white;
    box-shadow: 0 1px 4px rgba(0, 206, 209, 0.3);
    flex-shrink: 0;
  }

  .anime-display__stat-icon svg {
    width: 12px;
    height: 12px;
  }

  .anime-display__stat-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex: 1;
  }

  .anime-display__stat-label {
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
  }

  .anime-display__stat-value {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .anime-display__stat-note {
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    font-weight: 500;
    opacity: 0.8;
  }

  /* Placeholder States */
  .anime-display__cover-placeholder {
    width: 80px;
    height: 112px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.05), rgba(72, 209, 204, 0.02));
    border: 2px dashed rgba(0, 206, 209, 0.2);
  }

  .anime-display__cover-placeholder svg {
    width: 80px;
    height: 112px;
  }

  .anime-display__stat-card--placeholder {
    opacity: 0.6;
  }

  .anime-display__stat-card--placeholder .anime-display__stat-icon {
    background: linear-gradient(135deg, rgba(0, 206, 209, 0.3), rgba(0, 206, 209, 0.2));
  }



  /* Responsive Design */
  @media (max-width: 767px) {
    .anime-display__content {
      padding: var(--space-md);
      gap: var(--space-md);
      min-height: auto;
    }

    .anime-display__hero {
      gap: var(--space-sm);
    }

    .anime-display__cover {
      width: 80px;
      height: 112px;
    }

    .anime-display__cover-skeleton {
      width: 80px;
      height: 112px;
    }

    .anime-display__main-title {
      font-size: var(--font-size-lg);
    }

    .anime-display__subtitle {
      font-size: var(--font-size-sm);
    }

    .anime-display__stats {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }

    .anime-display__stat-card {
      padding: var(--space-sm);
    }

    .anime-display__stat-icon {
      width: 20px;
      height: 20px;
    }

    .anime-display__stat-icon svg {
      width: 12px;
      height: 12px;
    }

    .anime-display__stat-value {
      font-size: var(--font-size-sm);
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .anime-display__cover {
      width: 80px;
      height: 112px;
    }

    .anime-display__main-title {
      font-size: var(--font-size-lg);
    }
  }

  @media (min-width: 1024px) {
    .anime-display__content {
      gap: var(--space-md);
      padding: var(--space-md);
    }

    .anime-display__hero {
      gap: var(--space-sm);
      margin-bottom: var(--space-sm);
    }

    .anime-display__main-title {
      font-size: var(--font-size-lg);
    }

    .anime-display__subtitle {
      font-size: var(--font-size-sm);
    }
  }

  /* Accessibility Improvements */
  @media (prefers-reduced-motion: reduce) {
    .anime-display__cover,
    .anime-display__cover-container,
    .anime-display__cover-overlay {
      transition: none;
    }

    .animate-fade-in {
      animation: none;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .anime-display__title {
      -webkit-text-fill-color: var(--text-primary);
      background: none;
    }

    .anime-display__episodes,
    .anime-display__duration,
    .anime-display__status {
      border-width: 3px;
    }
  }

  /* Print Styles */
  @media print {
    .anime-display__cover-overlay,
    .anime-display__cover-container:hover {
      display: none;
    }

    .anime-display__cover {
      opacity: 1 !important;
    }
  }
</style>

<script>
  // Enhanced lazy loading with intersection observer for better performance
  if ('IntersectionObserver' in window) {
    const imageObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          if (img.dataset.src) {
            img.src = img.dataset.src;
            img.removeAttribute('data-src');
            observer.unobserve(img);
          }
        }
      });
    });

    // Observe all anime cover images
    document.querySelectorAll('.anime-display__cover[data-src]').forEach(img => {
      imageObserver.observe(img);
    });
  }

  // Preload next likely images for better UX
  function preloadImage(src: string) {
    if (src && src !== 'data:image/svg+xml;base64,') {
      const link = document.createElement('link');
      link.rel = 'preload';
      link.as = 'image';
      link.href = src;
      document.head.appendChild(link);
    }
  }

  // Export preload function for use by parent components
  (window as any).preloadAnimeImage = preloadImage;

  // Function to update component data without rebuilding HTML
  function updateAnimeDisplay(anime: any, isLoading: boolean, error: string | null) {
    const animeDisplayElement = document.querySelector('.anime-display');
    if (!animeDisplayElement) return;

    // Update the component's data attributes for reference
    if (anime) {
      animeDisplayElement.setAttribute('data-anime', JSON.stringify(anime));
    } else {
      animeDisplayElement.removeAttribute('data-anime');
    }
    animeDisplayElement.setAttribute('data-loading', isLoading.toString());
    animeDisplayElement.setAttribute('data-error', error || '');

    // Update the display state by showing/hiding sections and updating content
    updateDisplayState(animeDisplayElement, anime, isLoading, error);
  }

  function updateDisplayState(container: Element, anime: any, isLoading: boolean, error: string | null) {
    console.log('updateDisplayState called with:', { anime, isLoading, error });
    
    // Get all state sections
    const loadingSection = container.querySelector('.anime-display__loading') as HTMLElement;
    const errorSection = container.querySelector('.anime-display__error') as HTMLElement;
    const contentSection = container.querySelector('.anime-display__content') as HTMLElement;

    // Hide all sections first
    [loadingSection, errorSection, contentSection].forEach(section => {
      if (section) {
        section.style.display = 'none';
      }
    });

    if (isLoading) {
      // Show loading state
      if (loadingSection) {
        loadingSection.style.display = 'flex';
      }
    } else if (error && !isLoading) {
      // Show error state
      if (errorSection) {
        errorSection.style.display = 'block';
        const errorMessage = errorSection.querySelector('.anime-display__error-message');
        if (errorMessage) {
          errorMessage.textContent = error;
        }
      }
    } else if (anime && !isLoading && !error) {
      // Show content and update with anime data
      if (contentSection) {
        contentSection.style.display = 'flex';
        contentSection.classList.add('animate-fade-in');
        updateAnimeContent(contentSection, anime);
      }
    } else {
      // Show default/empty content
      if (contentSection) {
        contentSection.style.display = 'flex';
        showDefaultContent(contentSection);
      }
    }
  }

  function updateAnimeContent(contentSection: Element, anime: any) {
    // Update cover image
    const coverImg = contentSection.querySelector('.anime-display__cover') as HTMLImageElement;
    const placeholderCover = contentSection.querySelector('.anime-display__cover-placeholder') as HTMLElement;
    
    if (coverImg && placeholderCover) {
      const newSrc = anime.coverImage.large || anime.coverImage.medium;
      if (coverImg.src !== newSrc) {
        coverImg.src = newSrc;
        coverImg.alt = `Cover image for ${anime.title.english || anime.title.romaji}`;
        coverImg.classList.remove('loaded');
      }
      // Show real image, hide placeholder
      coverImg.style.display = 'block';
      placeholderCover.style.display = 'none';
    }

    // Update main title
    const mainTitle = contentSection.querySelector('.anime-display__main-title');
    if (mainTitle) {
      mainTitle.textContent = anime.title.english || anime.title.romaji;
    }

    // Update subtitle
    const subtitle = contentSection.querySelector('.anime-display__subtitle') as HTMLElement;
    const showSubtitle = anime.title.english && anime.title.romaji !== anime.title.english;
    if (subtitle) {
      if (showSubtitle) {
        subtitle.textContent = anime.title.romaji;
        subtitle.style.display = 'block';
      } else {
        subtitle.style.display = 'none';
      }
    }

    // Update status badge
    const statusBadge = contentSection.querySelector('.anime-display__status-badge') as HTMLElement;
    if (statusBadge && anime.status) {
      statusBadge.textContent = anime.status.replace('_', ' ').toLowerCase().replace(/\b\w/g, (l: string) => l.toUpperCase());
      statusBadge.setAttribute('data-status', anime.status.toLowerCase());
      statusBadge.style.display = 'inline-flex';
    } else if (statusBadge) {
      statusBadge.style.display = 'none';
    }

    // Update episodes stat
    const episodesValue = contentSection.querySelector('.anime-display__stat-card:first-child .anime-display__stat-value');
    if (episodesValue) {
      episodesValue.textContent = anime.episodes || 'Unknown';
    }

    // Update duration stat
    const durationValue = contentSection.querySelector('.anime-display__stat-card:last-child .anime-display__stat-value');
    if (durationValue) {
      const duration = anime.duration || 24;
      const isDefault = !anime.duration;
      durationValue.innerHTML = `${duration} min/ep${isDefault ? '<span class="anime-display__stat-note">(default)</span>' : ''}`;
    }
  }

  function showDefaultContent(contentSection: Element) {
    // Update to show default welcome content
    const mainTitle = contentSection.querySelector('.anime-display__main-title');
    if (mainTitle) {
      mainTitle.textContent = 'Welcome to Anime Time Calculator';
    }

    const subtitle = contentSection.querySelector('.anime-display__subtitle') as HTMLElement;
    if (subtitle) {
      subtitle.textContent = 'Use the search box below to find your favorite series';
      subtitle.style.display = 'block';
    }

    // Show placeholder cover, hide real image
    const coverImg = contentSection.querySelector('.anime-display__cover') as HTMLImageElement;
    const placeholderCover = contentSection.querySelector('.anime-display__cover-placeholder') as HTMLElement;
    
    if (coverImg && placeholderCover) {
      coverImg.style.display = 'none';
      placeholderCover.style.display = 'flex';
    }

    // Hide status badge
    const statusBadge = contentSection.querySelector('.anime-display__status-badge') as HTMLElement;
    if (statusBadge) {
      statusBadge.style.display = 'none';
    }

    // Update stats to show placeholders
    const episodesValue = contentSection.querySelector('.anime-display__stat-card:first-child .anime-display__stat-value');
    if (episodesValue) {
      episodesValue.textContent = '?';
    }

    const durationValue = contentSection.querySelector('.anime-display__stat-card:last-child .anime-display__stat-value');
    if (durationValue) {
      durationValue.textContent = '? min/ep';
    }
  }

  // Export update function for use by parent components
  (window as any).updateAnimeDisplay = updateAnimeDisplay;
</script>