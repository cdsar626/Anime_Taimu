---
// AnimeSearch Component
// Handles user input for anime title search with real-time debounced API calls
---

<div class="anime-search">
  <div class="search-container">
    <label for="anime-search-input" class="search-label">
      Search for an anime
    </label>
    <div class="search-input-wrapper">
      <input
        type="text"
        id="anime-search-input"
        class="search-input input focus-ring"
        placeholder="Enter anime title (e.g., Attack on Titan, Naruto)..."
        autocomplete="off"
        spellcheck="false"
        aria-describedby="search-status search-error"
      />
      <div class="search-icon" aria-hidden="true">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </div>
      <!-- Alternatives hint button inside search bar -->
      <button 
        type="button" 
        class="alternatives-hint-btn" 
        id="alternatives-hint-btn"
        aria-label="Show more anime results"
        style="display: none;"
        title="Not the right anime? Click to see more options"
      >
        <span class="hint-text">More options</span>
        <svg class="hint-chevron" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6,9 12,15 18,9"></polyline>
        </svg>
      </button>
      
      <button 
        type="button" 
        class="clear-button" 
        aria-label="Clear search"
        style="display: none;"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <!-- Loading State -->
  <div class="search-status" id="search-status" style="display: none;" aria-live="polite">
    <div class="loading-indicator">
      <div class="loading-spinner"></div>
      <span>Searching anime...</span>
    </div>
  </div>

  <!-- Error State -->
  <div class="search-error" id="search-error" style="display: none;" role="alert" aria-live="assertive">
    <div class="error-content">
      <svg class="error-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
      </svg>
      <span class="error-message"></span>
      <button type="button" class="retry-button btn btn-secondary">
        Try Again
      </button>
    </div>
  </div>

  <!-- Alternative Results Section - Simplified -->
  <div class="alternative-results" id="alternative-results" style="display: none;">
    <div class="alternatives-dropdown" id="alternatives-dropdown" style="display: none;">
      <div class="alternatives-list" id="alternatives-list">
        <!-- Alternative anime results will be populated here -->
      </div>
    </div>
  </div>
</div>

<style>
  .anime-search {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-container {
    margin-bottom: var(--space-lg);
  }

  .search-label {
    display: block;
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
    text-shadow: 0 1px 2px rgba(0, 206, 209, 0.1);
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-input {
    padding-left: 3.5rem;
    padding-right: 3.5rem;
    font-size: var(--font-size-xl);
    height: 4rem;
    border: 3px solid var(--primary-aqua-light);
    border-radius: var(--radius-xl);
    background: var(--surface);
    transition: all var(--transition-fast);
    box-shadow: 0 8px 16px rgba(0, 206, 209, 0.1);
    font-weight: 500;
  }

  .search-input:focus {
    border-color: var(--primary-aqua);
    box-shadow: 0 0 0 4px rgba(0, 206, 209, 0.2), 0 12px 24px rgba(0, 206, 209, 0.15);
    transform: translateY(-3px);
    background: var(--surface-elevated);
  }

  .search-input:hover:not(:focus) {
    border-color: var(--primary-aqua);
    box-shadow: 0 10px 20px rgba(0, 206, 209, 0.12);
    background: var(--surface-hover);
    transform: translateY(-2px);
  }

  .search-icon {
    position: absolute;
    left: 1.25rem;
    color: var(--primary-aqua);
    pointer-events: none;
    transition: color var(--transition-fast);
  }
  
  .search-icon svg {
    width: 24px;
    height: 24px;
  }

  .search-input:focus + .search-icon {
    color: var(--primary-aqua-dark);
  }

  .clear-button {
    position: absolute;
    right: 0.5rem;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 11;
  }
  
  .clear-button svg {
    width: 20px;
    height: 20px;
  }

  .clear-button:hover {
    color: var(--error);
    background: var(--error-light);
    transform: scale(1.1);
    box-shadow: var(--shadow-sm);
  }

  .clear-button:active {
    transform: scale(0.95);
  }

  .clear-button:focus {
    outline: 2px solid var(--primary-aqua);
    outline-offset: 2px;
  }

  /* Alternatives hint button inside search bar */
  .alternatives-hint-btn {
    position: absolute;
    right: 3.5rem;
    background: none;
    border: none;
    color: var(--primary-aqua-dark);
    cursor: pointer;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-xs);
    font-weight: 500;
    opacity: 0.8;
    z-index: 10;
  }

  .alternatives-hint-btn:hover {
    background: rgba(0, 206, 209, 0.1);
    opacity: 1;
    transform: scale(1.05);
  }

  .alternatives-hint-btn:active {
    transform: scale(0.98);
  }

  .alternatives-hint-btn:focus {
    outline: 2px solid var(--primary-aqua);
    outline-offset: 2px;
  }

  .hint-text {
    font-size: var(--font-size-xs);
    white-space: nowrap;
  }

  .hint-chevron {
    transition: transform var(--transition-normal);
    opacity: 0.7;
  }

  .alternatives-hint-btn.expanded .hint-chevron {
    transform: rotate(180deg);
  }

  .alternatives-hint-btn.expanded {
    background: rgba(0, 206, 209, 0.15);
    color: var(--primary-aqua);
  }

  /* Loading State Styles */
  .search-status {
    margin-top: var(--space-md);
  }

  .loading-indicator {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: linear-gradient(135deg, rgba(64, 224, 208, 0.08), rgba(127, 255, 212, 0.04));
    border: 2px solid var(--primary-aqua-light);
    border-radius: var(--radius-md);
    color: var(--primary-aqua-dark);
    font-weight: 500;
    box-shadow: var(--shadow-sm);
    animation: pulse 2s ease-in-out infinite;
  }

  .loading-spinner {
    width: 20px;
    height: 20px;
    border: 2px solid var(--primary-aqua-light);
    border-top: 2px solid var(--primary-aqua);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  /* Error State Styles */
  .search-error {
    margin-top: var(--space-md);
  }

  .error-content {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: var(--error-light);
    border: 2px solid rgba(255, 107, 107, 0.3);
    border-radius: var(--radius-md);
    color: var(--error);
    box-shadow: var(--shadow-sm);
    animation: slideDown var(--transition-normal) ease-out;
  }

  .error-icon {
    flex-shrink: 0;
  }

  .error-message {
    flex: 1;
    font-weight: 500;
  }

  .retry-button {
    flex-shrink: 0;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--font-size-sm);
    border-color: var(--error);
    color: var(--error);
  }

  .retry-button:hover {
    background: var(--error);
    color: white;
  }

  /* Animations */
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .animate-fade-in {
    animation: fadeIn var(--transition-normal) ease-in-out;
  }

  /* Responsive Design */
  @media (max-width: 767px) {
    .search-input {
      font-size: var(--font-size-base);
      height: 3rem;
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .search-icon {
      left: 0.75rem;
    }

    .clear-button {
      right: 0.5rem;
    }

    .alternatives-hint-btn {
      right: 2.5rem;
      font-size: var(--font-size-xs);
    }

    .hint-text {
      display: none; /* Hide text on mobile, show only icon */
    }

    .error-content {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .retry-button {
      align-self: stretch;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .search-input {
      border-width: 3px;
    }

    .loading-indicator,
    .error-content {
      border-width: 2px;
    }
  }

  /* Alternative results styles are now in global.css for better compatibility with dynamic content */
</style>

<script>
  import { AnimeSearchComponent } from './AnimeSearch.class.js';

  // Initialize component when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    window.animeSearchComponent = new AnimeSearchComponent();
  });
</script>